@model OnlineShoppingSystem.Models.CategoryModel

<link rel="stylesheet" href="~/Content/Style.css" type="text/css" />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4 align="center">Add Category</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="textbox">
            <div> @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })</div>
            <span>  @Html.ValidationMessageFor(model => model.CategoryName)</span>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CategoryDescription, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="textbox">
            @Html.EditorFor(model => model.CategoryDescription, new { htmlAttributes = new { @class = "form-control" } })
            <span> @Html.ValidationMessageFor(model => model.CategoryDescription, "", new { @class = "text-danger" })</span>
        </div>
    </div>

    <div class="buttons">
        <div>
            <input type="submit" style="background-color:forestgreen" value="AddCategory" class="btn btn-default" />

        </div>
    </div>
    <div class="back"><a href="~/Views/Category/CategoryDetails.cshtml">Back</a></div>
</div>
}


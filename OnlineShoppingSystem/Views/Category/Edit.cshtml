@model OnlineShoppingSystem.Entity.Category

<link rel="stylesheet" href="~/Content/Style.css" type="text/css" />


@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/CategoryPage.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Category", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(Model => Model.CategoryId);
    <table class="table">
        <tr>
            <td> @Html.LabelFor(model => model.CategoryName)</td>

            <td>
                @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CategoryName)
            </td>
        </tr>
        <tr>
            <td> @Html.LabelFor(model => model.CategoryDescription)</td>

            <td>
                @Html.TextBoxFor(model => model.CategoryDescription, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CategoryDescription)
            </td>
        </tr>

        <tr>
            <td>
                <input type="submit" value="Update" />
            </td>
            <td><a href="/Index">Back</a></td>
        </tr>
    </table>
}
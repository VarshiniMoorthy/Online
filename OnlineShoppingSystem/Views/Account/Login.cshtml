@model OnlineShoppingSystem.Models.LoginView
<link rel="stylesheet" href="~/Content/Style.css" type="text/css" />

@{
    ViewBag.Title = "Login";
}

<style>
    span {
        color: red;
    }

    table {
        color: forestgreen;
    }
</style>


@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <h2 align="center">Login</h2>
    <table class="table">
        <tr>
            <td> <bold>@Html.LabelFor(model => model.EmailId)</bold></td>

            <td>
                @Html.TextBoxFor(model => model.EmailId, new { @class = "form-control" })
                <span>
                    @Html.ValidationMessageFor(model => model.EmailId)
                </span>
            </td>
            @*<td>@Html.LabelFor(Model => Model.EmailId)</td>

                <td>
                    @Html.TextBox("EmailId", null, new { @class = "form-control", data_val = "true", data_val_required = "EmailId is required" })
                            @Html.ValidationMessage("EmailId", new { @class = "text-danger" })
                        </td>*@
        </tr>
        <tr>
            <td> @Html.LabelFor(model => model.Password)</td>

            <td>
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Password)
            </td>

            @*<td>@Html.LabelFor(Model => Model.Password)</td>
                <td>@Html.TextBox("Password", null, new { @class = "form-control", data_val = "true", data_val_required = "Password is required" })
                @Html.ValidationMessage("Password", new { @class = "text-danger" })

                </td>*@
        </tr>
        <tr>

            <td>
                @*<input type="button" onclick="" value="SignUp" />*@
                <a href="http://localhost:54344/Account/SignUp">New User</a>
            </td>
            <td>
                <input type="submit" />
            </td>
        </tr>
    </table>


}